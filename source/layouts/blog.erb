<!doctype html>
<html>
    <head>
        <meta charset="utf-8">

        <!-- Always force latest IE rendering engine or request Chrome Frame -->
        <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
        <meta name="viewport" content="width=device-width" ></meta>

        <!-- Use title if it's in the page YAML frontmatter -->
        <title><%= current_page.data.title ? ( "cwervo.com - " + current_page.data.title.to_s ) : "cwervo.com" %></title>

        <%= stylesheet_link_tag "normalize" %>
        <%= stylesheet_link_tag (current_page.data.title ?  'main' : 'index' ) %>
        <%= current_page.data.title ? ( javascript_include_tag  "all" ) : '' %>
    </head>

    <body class="<%= page_classes %>">
        <%= partial "nav-list"%>
        <section class="content">
            <header><h1><%= current_page.data.title ? current_page.data.title : 'Untitled' %></h1></header>
            <hr>
            <aside></aside>
            <%= yield %>
            <article></article>
            diqus comments and social share links and stuffff goes here! :D
        </section>
    </body>
</html>
